{
  "manifest_version": 3,
  "name": "Affiliate Link Remover",
  "version": "1.0",
  "description": "Amazon、FANZA、DLsiteのアフィリエイトパラメータを自動的に削除してクリーンなリンクにリダイレクトします",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.amazon.co.jp/*",
    "https://www.dmm.co.jp/*",
    "https://www.dlsite.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.jp/*",
        "https://www.dmm.co.jp/*",
        "https://www.dlsite.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}